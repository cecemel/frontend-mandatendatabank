{{#data-table content=content isLoading=isLoading noDataMessage="Geen mandatarissen gevonden"
     sort=sort page=page size=size as |t|}}
  {{#t.content as |c|}}
    {{#c.header}}
      {{#unless selectedBestuurseenheidId}}
        <th>Locatie</th>
      {{/unless}}
      {{#unless isScopeOrgaan}}
        <th>Orgaan</th>
      {{/unless}}
      <th>Fractie</th>
      {{#unless isScopeBestuursfunctie}}
        <th>Mandaten</th>
      {{/unless}}
      {{#unless isScopePersoon}}
        <th>Naam</th>
        <th>Familienaam</th>
        <th>Geslacht</th>
      {{/unless}}
      {{#unless isScopeBeleidsdomein}}<th>Bevoegdheden</th>{{/unless}}
      <th>Start mandaat</th>
      <th>Eind mandaat</th>
    {{/c.header}}
    {{#c.body as |row|}}
      {{#unless selectedBestuurseenheidId}}
        <td>
          {{row.bekleedt.bevatIn.isTijdsspecialisatieVan.bestuurseenheid.naam}}
        </td>
      {{/unless}}
      {{#unless isScopeOrgaan}}
        <td>
          {{#link-to 'mandatarissen.orgaan' row.bekleedt.bevatIn.isTijdsspecialisatieVan.id}}
            {{row.bekleedt.bevatIn.isTijdsspecialisatieVan.classificatie.label}}
          {{/link-to}}
        </td>
      {{/unless}}
      <td>
        {{#link-to 'mandatarissen.fractie' row.heeftLidmaatschap.binnenFractie.id}}
          {{row.heeftLidmaatschap.binnenFractie.naam}}
        {{/link-to}}
      </td>
      {{#unless isScopeBestuursfunctie}}
        <td>
          {{#link-to 'mandatarissen.bestuursfunctie' row.bekleedt.bestuursfunctie.id}}
            {{row.bekleedt.bestuursfunctie.label}}
          {{/link-to}}
        </td>
      {{/unless}}
      {{#unless isScopePersoon}}
        <td>
          {{#link-to 'mandatarissen.persoon' row.isBestuurlijkeAliasVan.id}}
            {{row.isBestuurlijkeAliasVan.gebruikteVoornaam}}
          {{/link-to}}
        </td>
        <td>
          {{#link-to 'mandatarissen.persoon' row.isBestuurlijkeAliasVan.id}}
            {{row.isBestuurlijkeAliasVan.achternaam}}
          {{/link-to}}
        </td>
        <td>{{row.isBestuurlijkeAliasVan.geslacht.label}}</td>
      {{/unless}}
      {{#unless isScopeBeleidsdomein}}
        <td>
          {{#each row.beleidsdomein as |beleidsdomein|}}
            {{#link-to 'mandatarissen.beleidsdomein' beleidsdomein.id}}
              {{beleidsdomein.label}}
            {{/link-to}}<br>
          {{/each}}
        </td>
      {{/unless}}
      <td>{{moment-format row.start 'DD/MM/YYYY'}}</td>
      <td>{{moment-format row.einde 'DD/MM/YYYY'}}</td>
    {{/c.body}}
  {{/t.content}}
{{/data-table}}
