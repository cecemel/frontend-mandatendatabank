{{#data-table content=content isLoading=isLoading noDataMessage="Geen mandatarissen gevonden"
     sort=sort page=page size=size class="mandataris-data-table" as |t|}}
  {{#t.content as |c|}}
    {{#c.header}}
      {{th-sortable field='bekleedt.bevatIn.isTijdsspecialisatieVan.bestuurseenheid.naam' currentSorting=sort label='Locatie'}}
      {{th-sortable field='bekleedt.bevatIn.isTijdsspecialisatieVan.classificatie.label' currentSorting=sort label='Orgaan'}}
      {{th-sortable field='heeftLidmaatschap.binnenFractie.naam' currentSorting=sort label='Fractie'}}
      {{th-sortable field='isBestuurlijkeAliasVan.gebruikteVoornaam' currentSorting=sort label='Naam'}}
      {{th-sortable field='isBestuurlijkeAliasVan.achternaam' currentSorting=sort label='Familienaam'}}
      {{th-sortable field='isBestuurlijkeAliasVan.geslacht.label' currentSorting=sort label='Geslacht'}}
      {{th-sortable field='bekleedt.bestuursfunctie.label' currentSorting=sort label='Mandaat'}}
      <th>Bevoegdheden</th>
      {{th-sortable field='start' currentSorting=sort label='Start mandaat'}}
      {{th-sortable field='einde' currentSorting=sort label='Eind mandaat'}}
    {{/c.header}}
    {{#c.body as |row|}}
      <td>
        {{row.bekleedt.bevatIn.isTijdsspecialisatieVan.bestuurseenheid.naam}}
      </td>
      <td>
        {{row.bekleedt.bevatIn.isTijdsspecialisatieVan.classificatie.label}}
      </td>
      <td>
        {{row.heeftLidmaatschap.binnenFractie.naam}}
      </td>
      <td>
        {{row.isBestuurlijkeAliasVan.gebruikteVoornaam}}
      </td>
      <td>
        {{row.isBestuurlijkeAliasVan.achternaam}}
      </td>
      <td>{{row.isBestuurlijkeAliasVan.geslacht.label}}</td>
      <td>
        {{row.bekleedt.bestuursfunctie.label}}
      </td>
      <td>
        {{#each row.beleidsdomein as |beleidsdomein|}}
          {{beleidsdomein.label}}<br>
        {{/each}}
      </td>
      <td>{{moment-format row.start 'DD/MM/YYYY'}}</td>
      <td>{{moment-format row.einde 'DD/MM/YYYY'}}</td>
    {{/c.body}}
  {{/t.content}}
{{/data-table}}
